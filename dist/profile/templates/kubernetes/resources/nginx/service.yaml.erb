apiVersion: v1
kind: Service
metadata:
  name: nginx
  namespace: nginx-ingress
  annotations:
    service.beta.kubernetes.io/external-traffic: OnlyLocal
spec:
  type: LoadBalancer
  # Require Kubernetes 1.7
  # externalTrafficPolicy: Local
  sessionAffinity: ClientIP
<% if !@parameters['loadBalancerIP'].empty? -%>
  loadBalancerIP: <%=@parameters['loadBalancerIP']%>
<% end -%>
  ports:
  - port: 80
    name: http
  - port: 443
    name: https
  selector:
    app: nginx
