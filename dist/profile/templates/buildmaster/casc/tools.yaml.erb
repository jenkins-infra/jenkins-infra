<%- if @tools && !@tools.empty? -%>
tool:
  git:
    installations:
    - name: "jgit"
  groovy:
    installations:
    <%- @tools["groovy"].each do |name, setup| %>
    - name: "<%= name %>"
      properties:
      - installSource:
          installers:
          - groovyInstaller:
              id: "<%= setup["version"] %>"
    <%- end -%>
  jdk:
    installations:
    - name: "jdk8"
      home: "/opt/jdk-8"
    - name: "jdk8-windows"
      home: "C:\\Tools\\jdk-8"
    - name: "jdk11"
      home: "/opt/jdk-11"
    - name: "jdk11-windows"
      home: "C:\\Tools\\jdk-11"
    - name: "jdk17"
      home: "/opt/jdk-17"
    - name: "jdk17-windows"
      home: "C:\\Tools\\jdk-17"
  maven:
    installations:
    <%- @tools["maven"].each do |name, setup| -%>
    - name: "<%= name %>"
      properties:
      - installSource:
          installers:
          - maven:
              id: "<%= setup["version"] %>"
    <%- end -%>
  mavenGlobalConfig:
    globalSettingsProvider: "standard"
    settingsProvider: "standard"
<%- end -%>
